@model Gerencial.Models.ViewModels.CreditVM

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ATENÇÃO!</h2>

<h3>Tem certeza que deseja excluir esta venda?</h3>
<div>
    <h4>Débito a ser Excluído:</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(m => Model.Client)</dt>
        <dd>@Html.DropDownListFor(m => m.Credit.ClientId,
                                   new SelectList(Model.Client, "Id", "Name"),
                                   new { @class = "form-control", disabled = "disabled" })</dd>
        <dt>@Html.DisplayNameFor(m => m.Credit.NameCredit)</dt>
        <dd>@Html.DisplayFor(model => model.Credit.NameCredit)</dd>
        <dt>@Html.DisplayNameFor(model => model.Credit.PaymentsDate)</dt>
        <dd>@Html.DisplayFor(model => model.Credit.PaymentsDate)</dd>
        <dt>@Html.DisplayNameFor(model => model.Credit.Value)</dt>
        <dd>@Html.DisplayFor(model => model.Credit.Value)</dd>
        <dt>@Html.DisplayNameFor(model => model.Credit.PaymentForm)</dt>
        <dd>@Html.DisplayFor(model => model.Credit.PaymentForm)</dd>
        <dt>@Html.DisplayNameFor(model => model.Credit.Observation)</dt>
        <dd>@Html.DisplayFor(model => model.Credit.Observation)</dd>
    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-danger" /> |
            @Html.ActionLink("Cancelar Exclusão", "Index", null, new { @class = "btn btn-default" })
        </div>
    }
</div>


